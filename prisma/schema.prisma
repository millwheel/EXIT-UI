generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Organization {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  masterId  Int?     @map("master_id")
  master    User?    @relation("ManagedOrganizations", fields: [masterId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")
  users     User[]   @relation("BelongsToOrganization")
  ads       Ad[]
}

model User {
  id                   Int            @id @default(autoincrement())
  organizationId       Int?           @map("organization_id")
  organization         Organization?  @relation("BelongsToOrganization", fields: [organizationId], references: [id])
  managedOrganizations Organization[] @relation("ManagedOrganizations")
  username             String         @unique
  nickname             String?
  password             String
  role                 String
  memo                 String?
  createdAt            DateTime       @default(now()) @map("created_at")
  ads                  Ad[]           @relation("AdvertiserAds")
  notices              Notice[]
}

model Ad {
  id             Int          @id @default(autoincrement())
  organizationId Int          @map("organization_id")
  organization   Organization @relation(fields: [organizationId], references: [id])
  advertiserId   Int          @map("advertiser_id")
  advertiser     User         @relation("AdvertiserAds", fields: [advertiserId], references: [id])
  kind           String
  status         String       @default("WAITING")
  keyword        String?
  rank           Int?
  productLink    String?      @map("product_link")
  startDate      DateTime     @map("start_date")
  endDate        DateTime     @map("end_date")
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")
}

model Notice {
  id        Int      @id @default(autoincrement())
  title     String   @db.Text
  content   String   @db.Text
  authorId  Int?     @map("author_id")
  author    User?    @relation(fields: [authorId], references: [id])
  viewCount Int      @default(0) @map("view_count")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}
